{
  "name": "beady-eye",
  "version": "0.7.1",
  "description": "",
  "main": ".build/src/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .build",
    "ci:upgrade-dependencies": "./upgrade-dependencies.sh",
    "dependency:upgrade": "yarn upgrade --latest",
    "deploy:dev": "serverless deploy --stage dev",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "package": "serverless package",
    "preversion": "yarn run build",
    "prepublish": "yarn run build",
    "release": "yarn run clean && yarn run build && yarn version && yarn run test && npm login && npm publish && yarn run test:security-monitor && git push && git push --tags",
    "test": "jest",
    "test:approval": "yarn build && node .build/test-data/approval-test-generator.js",
    "test:watch": "jest --watch",
    "test:it": "TMPDIR=/tmp jasmine --config=spec/support/jasmine.integration.json",
    "test:wip": "TMPDIR=/tmp jasmine --config=spec/support/jasmine.wip.json",
    "test:accept": "TMPDIR=/tmp cucumber-js spec",
    "test:security": "snyk test",
    "test:security-monitor": "snyk monitor",
    "test:cover": "jasmine --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/MechanicalRock/beady-eye"
  },
  "author": "Tim Myerscough <tim.myerscough@mechanicalrock.io>",
  "contributors": [],
  "license": "MIT",
  "homepage": "https://github.com/MechanicalRock/beady-eye",
  "dependencies": {
    "aws-sdk": "^2.238.1",
    "chai": "^4.1.2",
    "lodash.ismatch": "^4.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/jest": "^22.2.3",
    "@types/lodash.ismatch": "^4.4.3",
    "@types/node": "^6.0.110",
    "aws-sdk-mock": "^2.0.0",
    "jest": "^22.4.3",
    "snyk": "^1.80.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.8.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/",
      "<rootDir>/spec/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).ts?x)",
      "<rootDir>/spec/**/?(*.)(spec|test).ts?(x)",
      "**/*.steps.ts?(x)"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
